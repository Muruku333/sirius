{
  "app.name": "sirius",
  "app.logo": "pepicons-print:cloud",
  "app.backend": "http://10.0.0.98:3010",
  "app.routes": {
    "home": "/",
    "login": "/login",
    "register": "/register",
    "profile": "/p/:profile",
    "followers": "/:profile/followers",
    "following": "/:profile/following",
    "directs": "/direct",
    "direct": "/direct/:chatId",
    "saved": "/saved",
    "post": "/post/:postId",
    "notifications": "/notifications",
    "settings": "/settings"
  },
  "app.components": {
    "LoginRegister": {
      "login": {
        "textToAlternateForm": "Don't have an account?",
        "linkTextToAlternateForm": "Sign up",
        "btnSubmitText": "Enter your account!",
        "inputs": [
          {
            "name": "nick",
            "type": "text",
            "placeholder": "Nick",
            "icon": "fa-solid:id-card"
          },
          {
            "name": "password",
            "type": "password",
            "placeholder": "Password",
            "icon": "ri:eye-fill"
          }
        ]
      },
      "register": {
        "textToAlternateForm": "Already A Member?",
        "linkTextToAlternateForm": "Log In",
        "btnSubmitText": "Create account",
        "inputs": [
          {
            "name": "name",
            "type": "text",
            "placeholder": "Name",
            "icon": "fa-solid:id-card"
          },
          {
            "name": "nick",
            "type": "text",
            "placeholder": "Nick",
            "icon": "fa-solid:id-card"
          },
          {
            "name": "email",
            "type": "email",
            "placeholder": "Email",
            "icon": "mdi:email"
          },
          {
            "name": "password",
            "type": "password",
            "placeholder": "Password",
            "icon": "ri:eye-fill"
          }
        ],
        "error.messages": {
          "name.small": "This name seems too short!",
          "name.big": "That name seems too big!",
          "name.required": "This name seems too short!",
          "nick.small": "HAHA! I barely see your nickname!",
          "nick.big": "OMG! Why so many characters?",
          "nick.required": "This name seems too short!",
          "email.small": "Impossible for this to be an email!",
          "email.big": "I can't register you with a very large email.",
          "email.required": "Psst! Where is your email?",
          "email.format": "In what world would that be an email?",
          "password.small": "Put a few more characters and I'll let you in.",
          "password.big": "You're writing a book in the password field?",
          "password.required": "I didn't like your security without using a password!"
        }
      }
    },
    "Header": {
      "search.input.placeholder": "Search",
      "nav.icons": {
        "home": "mingcute:home-1-line",
        "direct": "ph:paper-plane-tilt",
        "saved": "fluent:save-copy-24-filled",
        "notifications": "fe:notice-push",
        "menu": "gg:menu-right"
      }
    },
    "Profile": {
      "actions.icons": {
        "direct": "ph:paper-plane-tilt",
        "follow": "tabler:user-plus",
        "unfollow": "tabler:user-minus",
        "pending": "mingcute:sandglass-line",
        "config": "carbon:overflow-menu-horizontal"
      }
    }
  }
}
